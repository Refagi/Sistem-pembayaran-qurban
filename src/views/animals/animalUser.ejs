<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
  <style>
    /* .nav-link {
    color: #263134;
    transition: all 0.2s ease-in-out;
    } */
    /* .nav-link:hover {
    color: #ffff !important;
    background-color: #2667ff;
    border-radius: 10px;
    } */
    .card{
      width: 90%;
    }
    .custom-width-input-group{
      width: 95% !important;
    }
  </style>
</head>
<body>
  <%- include('../header/headerUser.ejs') %>
  <main>
    <div class="container mt-5">

      <div class="input-group custom-width-input-group">
        <form action="?search<%= search %>" method="get" class="input-group ">
          <input type="search" name="search" class="form-control rounded" placeholder="cari" aria-label="search" aria-describedby="search-addon" />
        <button type="submit" class="btn btn-outline-primary" data-mdb-ripple-init>cari</button>
        </form>
      </div>

      <div class="row">
        <% animals.forEach(animal => { %>
          <div class="col-md-6 mb-4 mt-3">
            <div class="card text-center">
              <div class="card-header fw-bolder"><%= animal.type %></div>
              <div class="card-body ">
                <p class="card-text">Harga: <%= animal.price %></p>
                <p class="card-text">Umur: <%= animal.age %> Tahun</p>
                <p class="card-text">Berat: <%= animal.weight %> Kg</p>
                <p class="card-text">Jenis kelamin: <%= animal.gender %></p>
                <form action="/api/animals/user/<%= animal.id %>" method="get">
                  <button class="btn btn-outline-primary" type="submit" data-mdb-ripple-init>detail</button>
                </form>
              </div>
              <div class="card-footer text-muted"><%= animal.status %></div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </main>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
