<div class="container-lg p-5 ">
  <% if (message && message.message) { %>
    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
      <strong><%= message.message %></strong>
      <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
  <% } else { %>
    <% message === null %>
  <% } %>
  <div class="row justify-content-center">
    <div class="col-10 col-md-8 col-lg-6 custom-width">

      <ul class="nav nav-pills nav-justified mb-3 mt-5 m-5" id="ex1" role="tablist">
        <li class="nav-item" role="presentation">
          <h3 class="text-center fw-bolder">Masuk</h3>
        </li>
      </ul>

      <div class="tab-content m-5">
        <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="tab-login">
          <% if (errorMessage) { %>
            <div class="alert alert-danger"><%= errorMessage %></div>
          <% } %>
          <form action="/api/auth/login" method="POST">

            <div class="form-outline mb-4 fw-bolder">
              <input type="email" id="loginEmail" class="form-control" name="email" placeholder="Email" required/>
            </div>

            <div class="form-outline mb-4 fw-bolder">
              <input type="password" id="loginPassword" class="form-control" name="password" placeholder="Kata Sandi" required/>
            </div>

            <div class="text-center">
              <p>Belum punya akun? <a href="/api/auth/register">Daftar</a></p>
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-outline-primary btn-block mb-4 mt-3">Enter</button>
            </div>
          </form>
        </div>

      </div>
    </div>
  </div>
</div>

<script src="/bootstrap/js/bootstrap.bundle.min.js"></script>


