<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
    <style>
      .card {
        width: 90%;
      }
      .custom-width-input-group {
        width: 95% !important;
      }
    </style>
  </head>
  <body>
    <%- include('../header/headerUser.ejs') %>

    <main>
      <div class="container mt-5">

        <% if (message && message.message) { %>
          <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
            <strong><%= message.message %></strong>
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
          </div>
        <% } else { %>
          <% message === null %>
        <% } %>
        <div class="card text-center mx-auto">
          <div class="card-header fw-bolder">Catatan saya</div>
          <div class="card-body">
            <p class="card-text">Jumlah pembayaran: <%= notes.payment_amount %></p>
            <p class="card-text">Nama: <%= notes.name %></p>
            <p class="card-text">Email: <%= notes.email %></p>
            <p class="card-text">Waktu dibuat: <%= new Date(notes.createdAt).toLocaleString('id-ID', { dateStyle: 'short', timeStyle: 'short' }) %></p>
            <p class="card-text">Waktu diperbaharui: <%= new Date(notes.updatedAt).toLocaleString('id-ID', { dateStyle: 'short', timeStyle: 'short' }) %></p>
            <p class="card-text">Status: <%= notes.paidOff === true ? 'paid off' : 'not yet paid off' %></p>
          </div>
          <div class="card-footer text-muted">
            <form action="/api/payments/detail" method="get">
              <button class="btn btn-outline-primary" type="submit" data-mdb-ripple-init>Detail pembayaran</button>
            </form>
          </div>
        </div>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
